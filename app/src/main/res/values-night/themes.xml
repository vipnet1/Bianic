<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#00BCD4</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFEB3B</item>
        <item name="colorSecondaryVariant">#FFC107</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#673AB7</item>

        <!-- Custom. -->
        <item name="textColor1">@color/textColor1Dark</item>
        <item name="textColor2">@color/textColor2Dark</item>
        <item name="textColor3">@color/textColor3Dark</item>
        <item name="textColor4">@color/textColor4Dark</item>
    </style>
</resources>